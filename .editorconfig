# -*- mode: conf-unix; -*-

# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# defaults
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
indent_style = space

# 4 space indentation
[*.{ini,py,rst}]
indent_size = 4

# 2 space indentation
[*.{js,html,css, yml}]
indent_size = 2

# Markdown documents special treatment
[*.md]
trim_trailing_whitespace = false
indent_size = 4
